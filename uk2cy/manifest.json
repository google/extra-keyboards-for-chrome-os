{
  "name": "uk->cy",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Make the UK LeftShift and Enter keys wider",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "input"
  ],
  "input_components": [
    {
      "name": "uk->cy",
      "type": "ime",
      "id": "uk2cy",
      "description": "Make the UK LeftShift and Enter keys wider",  // user visible description
      "language": "en-US",  // The primary language this IME is used for
      "layouts": ["us"]
    }
  ]
}
